  .yui-b
    .vcard
      %span.fn.org=@contact.name
      .adr
        .street-address=@contact.address_1
        .extended-address=@contact.address_2 unless @contact.address_2.blank?
        %span.locality="#{@contact.city_town}, "
        %span.region=@contact.state_territory
        %span.postal-code=@contact.postal_code
        .country-name=@contact.country
